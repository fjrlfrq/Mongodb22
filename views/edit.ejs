<%- include('./partials/header.ejs') %>

<div class="container" style="padding-top: 7rem;">
    <div class="containers">

        <h1>Edit Data</h1>

        <form class="form-horizontal" action="" method="post">
            <div class="form-group">
                <label class="col-sm-2">String</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="String" name="string"  value="<%= data.string %>">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2">Integer</label>
                <div class="col-sm-10">
                    <input type="integer" class="form-control" placeholder="Integer" name="integer"  value="<%= data.integer %>">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2">Float</label>
                <div class="col-sm-10">
                    <input type="real" class="form-control" placeholder="Float" name="float"  value="<%= data.float %>">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2">date</label>
                <div class="col-sm-10">
                    <input type="date" class="form-control" placeholder="date" name="daten"  value="<%= data.daten %>">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2">String</label>
                <div class="col-sm-10">
                    <input type="boolean" class="form-control" placeholder="boolean..." name="boolean"  value="<%= data.boolean %>"> 
                </div>
            </div>
            <div>
                <button type="submit" class="btn btn-info">Update</button>
                <a href="/" class="btn btn-warning">Back</a>
            </div>
        </form>

    </div>
</div>

<%- include('./partials/footer.ejs') %>